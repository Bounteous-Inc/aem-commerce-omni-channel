<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:targetPath="/etc/commerce/products/wetelco"
        jcr:description="Scaffolding that is used to create and update WeTelco products."
        jcr:primaryType="cq:PageContent"
        jcr:title="Product Data"
        sling:resourceType="wcm/scaffolding/components/scaffolding">
        <cq:dialog
            jcr:primaryType="nt:unstructured"
            jcr:title="WeTelco Product Properties"
            sling:resourceType="cq/gui/components/authoring/dialog">
            <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                type="nav"/>
            <content
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                            type="nav"/>
                        <items jcr:primaryType="nt:unstructured">
                            <basic
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Basic"
                                sling:resourceType="granite/ui/components/foundation/section">
                                <items jcr:primaryType="nt:unstructured">
                                    <titles
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                           <!--<blurb
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Blurb"
                                                name="./blurb"
                                                renderReadOnly="{Boolean}true"/>-->
                                            <description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                                fieldLabel="Description"
                                                name="./jcr:description"
                                                renderReadOnly="{Boolean}true"/>    
                                            <frontendtitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Front End Title"
                                                name="./frontendtitle"
                                                renderReadOnly="{Boolean}true"
                                                required="{Boolean}true"/>
                                            <campaigndescription
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Campaign Description"
                                                name="./jcr:title"
                                                renderReadOnly="{Boolean}true"/>                                               
                                            <identifier
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Identifier"
                                                name="./identifier"
                                                renderReadOnly="{Boolean}true"/>
                                            <special_offer
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Special Offer"
                                                name="./special_offer"
                                                renderReadOnly="{Boolean}true"/>
                                            <payontimediscount
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Pay On Time Discount"
                                                name="./payontimediscount"
                                                renderReadOnly="{Boolean}true"/>                                                
                                            <directdebitdiscount
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Direct Debit Discount"
                                                name="./directdebitdiscount"
                                                renderReadOnly="{Boolean}true"/>                                               
                                            <benefitperiod
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Benefit Period"
                                                name="./benefitperiod"
                                                renderReadOnly="{Boolean}true"/>
                                            <earlyTerminationFee
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Early Termination Fee"
                                                name="./earlyTerminationFee"
                                                renderReadOnly="{Boolean}true"/>
                                            <accountmanagement
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Account Management"
                                                name="./accountmanagement"
                                                renderReadOnly="{Boolean}true"/>
                                            <terms_and_conditions
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldLabel="Terms and Conditions"
                                                name="./terms_and_conditions"
                                                renderReadOnly="{Boolean}true"/>                                      
                                            <product_image_icon
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                fieldLabel="Product Image Icon"
                                                name="./product_image_icon"
                                                renderReadOnly="{Boolean}true"/>
                                                                                        
                                             <clientlibs
		                                        jcr:primaryType="nt:unstructured"
		                                        sling:resourceType="granite/ui/components/foundation/includeclientlibs"
		                                        categories="[cq.authoring.dialog]"/>   
                                        </items>
                                    </titles>
                                </items>
                            </basic>
                        </items>
                    </tabs>
                </items>
            </content>
        </cq:dialog>
        <dialog/>
    </jcr:content>
</jcr:root>
