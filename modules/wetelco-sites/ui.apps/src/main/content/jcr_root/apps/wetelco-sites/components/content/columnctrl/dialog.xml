<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Settings">
                <items jcr:primaryType="cq:WidgetCollection">
                    <bgcolor
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Background Color"
                        name="./bgcolor"
                        showHexValue="{Boolean}true"
                        xtype="colorfield"/>
                    <columns
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Dropdown list - how many columns wide you want each column (ex. 6/12 would be 50% of the width)."
                        fieldLabel="Columns"
                        name="./columns"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            defaultValue="left"
                            fieldDescription="Text alignment position"
                            fieldLabel="Alignment"
                            name="./alignment"
                            type="select"
                            xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <_x0031_
                                    jcr:primaryType="nt:unstructured"
                                    text="1/12"
                                    value="1"/>
                                <_x0032_
                                    jcr:primaryType="nt:unstructured"
                                    text="2/12"
                                    value="2"/>
                                <_x0033_
                                    jcr:primaryType="nt:unstructured"
                                    text="3/12"
                                    value="3"/>
                                <_x0034_
                                    jcr:primaryType="nt:unstructured"
                                    text="4/12"
                                    value="4"/>
                                <_x0035_
                                    jcr:primaryType="nt:unstructured"
                                    text="5/12"
                                    value="5"/>
                                <_x0036_
                                    jcr:primaryType="nt:unstructured"
                                    text="6/12"
                                    value="6"/>
                                <_x0037_
                                    jcr:primaryType="nt:unstructured"
                                    text="7/12"
                                    value="7"/>
                                <_x0038_
                                    jcr:primaryType="nt:unstructured"
                                    text="8/12"
                                    value="8"/>
                                <_x0039_
                                    jcr:primaryType="nt:unstructured"
                                    text="9/12"
                                    value="9"/>
                                <_x0031_0
                                    jcr:primaryType="nt:unstructured"
                                    text="10/12"
                                    value="10"/>
                                <_x0031_1
                                    jcr:primaryType="nt:unstructured"
                                    text="11/12"
                                    value="11"/>
                                <_x0031_2
                                    jcr:primaryType="nt:unstructured"
                                    text="12/12"
                                    value="12"/>
                            </options>
                        </fieldConfig>
                    </columns>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
